print("City:", city)


#Practice basic math calculations in Python

a = 10
b = 3

print("Addition:", a + b)
print("Subtraction:", a - b)
print("Multiplication:", a * b)
print("Division:", a / b)
print("Floor Division:", a // b)
print("Modulus:", a % b)
print("Power:", a ** b)


#Create a list of your favorite foods and learn to access them

favorite_foods = ["Biryani", "Pizza", "Ice Cream", "Pasta"]

print("Full List:", favorite_foods)
print("First Item:", favorite_foods[0])
print("Last Item:", favorite_foods[-1])
print("First Two Foods:", favorite_foods[:2])


